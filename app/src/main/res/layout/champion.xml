<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Champion" >

    <Button
        android:id="@+id/bJoke"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="30dp"
        android:alpha="0.8"
        android:text="@string/bJoke"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bMove"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/bJoke"
        android:layout_alignBottom="@+id/bJoke"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:alpha="0.8"
        android:text="@string/bMove"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bAttack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/bMove"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:text="@string/bAttack"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bTaunt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/bJoke"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:alpha="0.8"
        android:text="@string/bTaunt"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bLeft"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/bTaunt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42dp"
        android:alpha="0.8"
        android:background="@drawable/left" />

    <Button
        android:id="@+id/bRight"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/bTaunt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:alpha="0.8"
        android:background="@drawable/right" />

    <Button
        android:id="@+id/bRand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bTaunt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
       />

</RelativeLayout>